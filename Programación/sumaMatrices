package SUMAMATRICES;

public class Sumadematrices {

	public static void main (String args[]) {

		
		//DECLARACION DE NUESTRAS VARIABLES A UTILIZAR
		int columnas, filas, resultado; //resultado ES DONDE SE VA GUARDANDO EL RESULTADO 
		
		
		int MiMatriz10x10 [][]= new int[10][10];

		
		for(columnas=0; columnas<MiMatriz10x10.length; columnas++) {
		
			for(filas=0; filas<MiMatriz10x10.length; filas++) {
				
				//SE INGRESAN LOS NUMEROS CON UN RANDOM O SE QUE EL RESULTADO NUNCA SERA IGUAL
				
				MiMatriz10x10[columnas][filas] = (int) (Math.random()*10);
					System.out.print("");	
				System.out.print(" "+"["+columnas+","+filas+"] = "+ MiMatriz10x10[columnas][filas]);
				
			}
			System.out.println("");
			System.out.println("");	
		}
		
		System.out.println("");	
		
		//INICIA SUMA
			
		for(filas=0; filas<MiMatriz10x10.length; filas++) {
			
			resultado=0; //NUESTRO VARIABLE DONDE SE VA GUARDANDO EL RESULTADO
			
			for(columnas=0; columnas<MiMatriz10x10.length; columnas++) {
				
			
				resultado += MiMatriz10x10[columnas][filas]; //SUMA
				}
			System.out.println("Tu resultado es " + resultado);	
			}
	}
}
